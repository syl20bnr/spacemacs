module ${1:`(let ((fn (capitalize (file-name-nondirectory
                                 (file-name-sans-extension
         (or (buffer-file-name)
             (buffer-name (current-buffer))))))))
           (while (string-match "_" fn)
             (setq fn (replace-match "" nil nil fn)))
           fn)`}
  $0
end